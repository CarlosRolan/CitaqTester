<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <!-- 第0部分 -->

    <!-- 第一部分 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_8"
        android:layout_weight="15"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_8"
            android:layout_weight="2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_opencash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/btnstr_opencash"
                    android:textSize="@dimen/tx_size_18"/>
                <Button
                    android:id="@+id/btn_cutPaper"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/btnstr_cutpaper"
                    android:textSize="@dimen/tx_size_18"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_getprintstatus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/btnstr_getstatus"
                android:textSize="@dimen/tx_size_18"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_printtest"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/btnstr_printtest"
                    android:textSize="@dimen/tx_size_18" />

                <Button
                    android:id="@+id/btn_printdemo"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/btnstr_printdemo"
                    android:textSize="@dimen/tx_size_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_enableBuzzer"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/btnstr_enablebuzzer"
                    android:textSize="@dimen/tx_size_20" />
                <!-- 1F 1B 1F 50 40 -->

                <Button
                    android:id="@+id/btn_disableBuzzer"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/btnstr_disablebuzzer"
                    android:textSize="@dimen/tx_size_20" />
                <!-- 1F 1B 1F 50 42 -->
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_20"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/red" />

                <TextView
                    android:id="@+id/tv_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:layout_marginRight="@dimen/margin_40"
                    android:layout_toRightOf="@id/red"
                    android:text="@string/red"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/tx_size_32"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/tb_red"
                    android:layout_width="@dimen/togglebutton_width"
                    android:layout_height="@dimen/togglebutton_height"
                    android:layout_toRightOf="@id/tv_red"
                    android:background="@drawable/togglebutton_selector"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_20"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue" />

                <TextView
                    android:id="@+id/tv_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:layout_marginRight="@dimen/margin_40"
                    android:layout_toRightOf="@id/blue"
                    android:text="@string/blue"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/tx_size_32"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/tb_blue"
                    android:layout_width="@dimen/togglebutton_width"
                    android:layout_height="@dimen/togglebutton_height"
                    android:layout_toRightOf="@id/tv_blue"
                    android:background="@drawable/togglebutton_selector"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_20"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/fresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fresh" />

                <TextView
                    android:id="@+id/tv_fresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:layout_marginRight="@dimen/margin_40"
                    android:layout_toRightOf="@id/fresh"
                    android:text="@string/fresh"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/tx_size_32"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/tb_fresh"
                    android:layout_width="@dimen/togglebutton_width"
                    android:layout_height="@dimen/togglebutton_height"
                    android:layout_toRightOf="@id/tv_fresh"
                    android:background="@drawable/togglebutton_selector"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_margin="@dimen/margin_8">
            <TextView
                android:id="@+id/tv_printReception"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="top"
                android:hint="@string/str_datareception"
                android:isScrollContainer="true"
                android:scrollbarStyle="insideOverlay"
                android:textColor="@android:color/black"
                android:textSize="@dimen/tx_size_16">
            </TextView>
        </ScrollView>
    </LinearLayout>

    <!-- 第二部分 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_8"
        android:layout_weight="15"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/margin_8"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_openPicture"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/btnstr_openPicture"
                android:textSize="@dimen/tx_size_18" />

            <Button
                android:id="@+id/btn_printPicture"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/btnstr_printPicture"
                android:textSize="@dimen/tx_size_18" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageForPrint"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>
